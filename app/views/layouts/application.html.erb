<!DOCTYPE html>
<html>
  <head>
    <title>FlavorCheck</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta property="og:image" content="<%= image_url('featured-image.png') %>" />
    <%= stylesheet_link_tag    'application', media: 'all'%>
    <%= javascript_include_tag 'application' %>
    <%= favicon_link_tag asset_path('burger-favicon.png') %>
      
    <% if logged_in? %>
      <script id="bootstrap-current-user" type="text/javascript">
        window.currentUser = <%= render("api/sessions/current_user.json.jbuilder",
          user: current_user).html_safe %>
      </script>
    <% end %>

    <script type="text/javascript">
        window.burgerhomepage = "<%= image_url('burgerhomepage.png') %>";
        window.flavortownicon = "<%= image_url('flavortown-icon.png') %>";
        window.rating = "<%= image_url('rating.png') %>";
        window.badges = "<%= image_url('badges.png') %>"
        window.linkedIn = "<%= image_url('linkedin_icon.png') %>"
        window.github = "<%= image_url('github-icon.png') %>"
        window.avatar = "<%= image_url('avatar-untapped.jpg') %>"
        window.checkin =  "<%= image_url('checkin_photo.png') %>"
        window.burgerking =  "<%= image_url('burger-king-.png') %>"
        window.coverphoto = "<%= image_url('cover-photo.jpg') %>"
        window.profilecover = "<%= image_url('profile-cover-test.jpg') %>"
    </script>
  </head>

  <body>
    <%= yield %>
  </body>
</html>
