<!DOCTYPE html>
<html>
  <head>
    <title>FlavorCheck</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all'%>
    <%= javascript_include_tag 'application' %>
    <%= favicon_link_tag asset_path('burger-favicon.png') %>
    <% if current_user %>
      <script>
        window.currentUser = {
          "id": <%= current_user.id %>,
          "username": "<%= current_user.username %>",
          "email": "<%= current_user.email %>",
        };
      </script>
    <% end %>
    <script type="text/javascript">
        window.burgerhomepage = "<%= image_url('burgerhomepage.png') %>";
        window.flavortownicon = "<%= image_url('flavortown-icon.png') %>";
        window.rating = "<%= image_url('rating.png') %>";
        window.badges = "<%= image_url('badges.png') %>"
        window.linkedIn = "<%= image_url('linkedin_icon.png') %>"
        window.github = "<%= image_url('github-icon.png') %>"
        window.avatar = "<%= image_url('avatar-untapped.jpg') %>"
        window.mcdouble = "<%= image_url('mcdouble.jpg') %>"
        window.checkin =  "<%= image_url('checkin_photo.png') %>"
        window.burgerking =  "<%= image_url('burger-king-.png') %>"
    </script>
  </head>

  <body>
    <%= yield %>
  </body>
</html>
